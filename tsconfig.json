{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules", "client", "server"],
      "@rocketseat/*": ["client/*/src", "server/*/src"]
    },
    "types": ["node", "jest"]
  },
  "include": ["client", "server"],
  "exclude": ["node_modules", "server/**/dist", "client/**/dist"]
}
