{
  "compilerOptions": {
    "lib": ["es6"],
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,                    
    "removeComments": true,               
    "esModuleInterop": true,                 
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "pretty": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "typeRoots" : ["./node_modules/@types", "./src/@types"]
  }
}
