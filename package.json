{
  "name": "root",
  "private": true,
  "workspaces": [
    "server/*",
    "client/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.1",
    "commitizen": "^3.0.7",
    "cz-lerna-changelog": "^2.0.0",
    "jest": "^24.4.0",
    "lerna": "^3.13.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.2",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3333"
  },
  "scripts": {
    "test": "jest",
    "commit": "git-cz",
    "npm:publish": "exit 0",
    "tsc": "tsc",
    "lint": "run-p -c lint:*",
    "lint:css": "stylelint 'server/**/*.ts{,x}' 'client/**/*.ts{,x}'",
    "lint:ts": "tslint 'server/**/*.ts{,x}' 'client/**/*.ts{,x}'",
    "fix": "yarn lint:ts --fix",
    "prebuild": "run-p tsc lint",
    "build": "lerna exec --parallel 'BABEL_ENV=build babel src --root-mode upward --out-dir dist --source-maps --extensions .ts,.tsx --delete-dir-on-start --no-comments'",
    "build:declarations": "lerna exec --parallel 'yarn tsc'"
  }
}
