{
  "name": "micro-skylab",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "author": "Diego Fernandes <diego.schell.f@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "packages/server/*",
    "packages/client/*",
    "protos"
  ],  
  "scripts": {
    "build:server": "lerna run build --scope @server/*",
    "build:protos:js": "grpc_tools_node_protoc --js_out=import_style=commonjs,binary:./protos/generated --grpc_out=./protos/generated --plugin=protoc-gen-grpc=./node_modules/.bin/grpc_tools_node_protoc_plugin -I ./protos protos/*.proto",
    "build:protos:ts": "grpc_tools_node_protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --ts_out=./protos/generated -I ./protos protos/*.proto"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.7.2",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.3",
    "grpc-tools": "^1.8.1",
    "grpc_tools_node_protoc_ts": "^3.0.0",
    "lerna": "^3.21.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.2"
  },
  "dependencies": {}
}
